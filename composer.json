{
  "require": {
    "composer/composer": "1.0.*@dev",
    "continuousphp/drupal-base-build": "dev-develop"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "drupal/phing-drush-task",
        "version": "1.0",
        "source": {
          "url": "http://git.drupal.org/project/phingdrushtask.git",
          "type": "git",
          "reference": "7.x-1.0"
        }
      }
    }
  ],
  "scripts": {
    "post-update-cmd": [
      "Continuousphp\\Drupal::createBuild"
    ],
    "post-install-cmd": [
      "Continuousphp\\Drupal::createBuild"
    ]
  },
  "config": {
    "bin-dir": "bin/"
  }
}
